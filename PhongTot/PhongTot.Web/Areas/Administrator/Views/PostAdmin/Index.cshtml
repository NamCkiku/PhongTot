
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content" ng-controller="postAdminController">
    <ol class="breadcrumb">

        <li><a href="index.html">Home</a></li>
        <li>App Templates</li>
        <li>eCommerce</li>
        <li class="active"><a href="app-ecommerce-order-list.html">eCommerce Order List</a></li>
    </ol>
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="keyword" placeholder="Từ khóa">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="button" ng-click="search()">Tìm kiếm</button>
                    </span>
                </div><!-- /input-group -->
                <div class="col-md-6">
                    <button class="btn btn-success">Thêm mới</button>
                </div>
            </div>
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h2>Order List</h2></div>
                    <div class="panel-body panel-no-padding">
                        <table id="example" class="table table-striped table-bordered m0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text-center">Ảnh</th>
                                    <th class="text-center">Tiêu Đề</th>
                                    <th class="text-center">Ngày Đăng</th>
                                    <th class="text-center">Trạng Thái</th>
                                    <th class="text-center">Chức Năng</th>
                                </tr>
                            </thead>


                            <tbody>
                                <tr class="text-center" ng-repeat="items in Post">
                                    <td><img width="30" height="30" src="http://localhost:33029/Content/images/{{items.Image}}" /></td>
                                    <td>{{items.Name}}</td>
                                    <td>{{items.CreateDate|timeago}}</td>
                                    <td>
                                        <span class="label label-info">{{items.Status}}</span>
                                    </td>
                                    <td>
                                        <a href="/Post/Detail/{{items.ID}}" class="btn btn-default btn-xs btn-label"><i class="fa fa-search"></i> Xem</a>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_info" id="example_info" role="status" aria-live="polite">Trang: {{page+1}} - Tổng số bản ghi: {{totalCount}}</div>
                                </div>
                                <pager-directive page="{{page}}" custom-path="{{customPath}}" pages-count="{{pagesCount}}" total-count="{{totalCount}}" search-func="getAllPost(page)"></pager-directive>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div> <!-- .container-fluid -->
</div>

