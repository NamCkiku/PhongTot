                <div class="col-md-12">
                    <div class="form-group">
                        <div style="height:300px">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
            </div>*@

        <button type="submit" ng-disabled="frmAddInfo.$invalid" class="btn btn-success pull-right">Đăng Tin</button>



    </div>

</form>
