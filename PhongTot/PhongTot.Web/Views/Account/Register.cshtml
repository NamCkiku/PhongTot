@model PhongTot.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (ViewBag.ThongBao != null)
    {
        <label>@ViewBag.ThongBao</label>
    }
    @Html.AntiForgeryToken()
    <div class="form-horizontal col-lg-10">
        @Html.ValidationMessage("CustomError")
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="txt_fullname" class="col-sm-4 control-label">Email</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="help-block"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Mật Khẩu</label>
            <div class="col-sm-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="help-block"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-4 control-label">Nhập Lại Mật Khẩu</label>
            <div class="col-sm-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                <span class="help-block"></span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FullName, new { @class = "col-lg-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                <span class="help-block"></span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-lg-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                <span class="help-block"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-primary">Đăng ký tài khoản</button>
            </div>
        </div>
    </div>
    @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
}